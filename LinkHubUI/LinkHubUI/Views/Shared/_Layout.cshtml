<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Link Hub", "Index", "Home", new { area = "Common" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "Index", new { Controller = "Home", Area = "Common" }) </li>
                    <li>@Html.ActionLink("Register", "Index", new { Controller = "Register", Area = "Security" }) </li>
                    <li>@Html.ActionLink("BrowseURLs", "Index", new { Controller = "BrowseURL", Area = "Common" }) </li>
                    <li>@Html.ActionLink("QuickURLSubmit", "Index", new { Controller = "QuickURLSubmit", Area = "Common" }) </li>

                    @if (User.Identity.IsAuthenticated)

                    {
                        if (User.IsInRole("A"))
                        {
                            <li>@Html.ActionLink("Category", "Index", new { Controller = "Category", Area = "Admin" }) </li>
                            <li>@Html.ActionLink("ListCategory", "Index", new { Controller = "ListCategory", Area = "Admin" }) </li>
                            <li>@Html.ActionLink("ListUser", "Index", new { Controller = "ListUser", Area = "Admin" }) </li>
                            <li>@Html.ActionLink("ApproveURLs", "Index", new { Controller = "ApproveURL", Area = "Admin" }) </li>
                        }
                        if (User.IsInRole("A") || User.IsInRole("U"))
                        {
                            <li>@Html.ActionLink("SubmitURL", "Index", new { Controller = "URL", Area = "User" }) </li>
                            <li>@Html.ActionLink("SignOut", "SignOut", new { Controller = "Login", Area = "Security" }) </li>
                            <li><a href="#">Welcome @User.Identity.Name</a> </li>
                        }


                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", new { Controller = "Login", Area = "Security" }) </li>
                    }




                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br /><br />
        @RenderBody()
        <hr />

        <br />
        <div class="fb-comments" data-href="http://linkhub.manzoorthetrainer.com/" data-numposts="5" data-colorscheme="light"></div>
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - LinkHub Using Asp.Net MVC And Entity Framework</p>
        </footer>
        <blockquote class="pull-right">
            <p>No engineer should leave their country for hunting the job.</p>
            <small><a href="http://www.manzoorthetrainer.com" target="_blank"> ManzoorTheTrainer</a><cite title="Source Title"> [MCT]</cite></small>
        </blockquote>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>